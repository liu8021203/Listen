<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpx40"
        android:layout_marginRight="@dimen/dpx40"
        android:background="@drawable/dialog_layout_bg"
        android:orientation="vertical"
        android:padding="1dip">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="该主播尚未开放试听，您可以打赏收听"
                android:textColor="@color/black"
                android:textSize="@dimen/px30" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="#dcdcdc"></View>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dpx20"
                android:layout_marginRight="@dimen/dpx20"></android.support.v7.widget.RecyclerView>


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginTop="@dimen/dpx30"
            android:background="#dcdcdc"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp750_90"
            android:orientation="horizontal"
            android:padding="1dip">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black" />

            <View
                android:layout_width="0.1dip"
                android:layout_height="match_parent"
                android:background="#dcdcdc"></View>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/black" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
