<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cebebeb"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/title"
        layout="@layout/base_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_116"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp750_18"
            android:text="支付宝支付"
            android:textColor="@color/c666666"
            android:textSize="@dimen/px30" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_85"
        android:layout_marginTop="@dimen/dp750_66"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp750_60"
            android:text="付款金额"
            android:textColor="@color/c676767"
            android:textSize="@dimen/px30"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp750_60"
            android:text="￥1.00"
            android:textColor="@color/c676767"
            android:textSize="@dimen/px30"

            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_1"
        android:background="@color/cebebeb"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_230"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp750_60"
                android:text="当前状态"
                android:textColor="@color/c7f7f7f"
                android:textSize="@dimen/px26"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp750_60"
                android:text="完成"
                android:textColor="@color/c7f7f7f"
                android:textSize="@dimen/px26"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp750_60"
                android:text="操作时间"
                android:textColor="@color/c7f7f7f"
                android:textSize="@dimen/px26"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp750_60"
                android:text="2016-04-04 18:18:40"
                android:textColor="@color/c7f7f7f"
                android:textSize="@dimen/px26"

                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp750_60"
                android:text="充值单号"
                android:textColor="@color/c7f7f7f"
                android:textSize="@dimen/px26"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp750_60"
                android:text="23214342352453463"
                android:textColor="@color/c7f7f7f"
                android:textSize="@dimen/px26"

                />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_1"
        android:background="@color/cebebeb"></View>

    <TextView
        android:id="@+id/online_help"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_100"
        android:background="@drawable/mine_item_background"
        android:gravity="center"
        android:text="在线帮助"
        android:textColor="@color/cffab3e"
        android:textSize="@dimen/px28" />
</LinearLayout>
