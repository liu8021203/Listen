<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">


    <ImageView
        android:id="@+id/login_top_image"
        android:layout_width="@dimen/dp750_150"
        android:layout_height="@dimen/dp750_150"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp750_88"
        android:src="@drawable/login_top_image" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_top_image"
        android:layout_marginTop="@dimen/dp750_80"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp750_200"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/qq_login"
                    android:layout_width="@dimen/dp750_100"
                    android:layout_height="@dimen/dp750_100"
                    android:layout_gravity="center"
                    android:src="@drawable/new_qq_image" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/weixin_login"
                    android:layout_width="@dimen/dp750_100"
                    android:layout_height="@dimen/dp750_100"
                    android:layout_gravity="center"
                    android:src="@drawable/new_weixin_image" />
            </LinearLayout>


        </LinearLayout>


        <TextView
            android:id="@+id/tv_phone_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号/账号登录"
            android:textColor="@color/c666666"
            android:layout_marginTop="10dp"
            android:padding="6dp"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/px28" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp750_54"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/forget_password_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="？忘记密码"
                android:textColor="@color/c666666"
                android:textSize="@dimen/px28" />

            <View
                android:layout_width="@dimen/dp750_1"
                android:layout_height="@dimen/dp750_30"
                android:layout_marginLeft="@dimen/dp750_34"
                android:background="@color/cb6b6b6"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp750_34"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp750_30"
                    android:layout_height="@dimen/dp750_30"
                    android:src="@drawable/svg_persson_add" />

                <TextView
                    android:id="@+id/to_regist_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp750_5"
                    android:text="立即注册"
                    android:textColor="@color/c666666"
                    android:textSize="@dimen/px28" />
            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/login_immediately"
            android:layout_width="@dimen/dp750_300"
            android:layout_height="@dimen/dp750_80"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp750_50"
            android:background="@drawable/login_background"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="@dimen/px30" />

    </LinearLayout>








</RelativeLayout>
