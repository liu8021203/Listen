<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_anchor_mess"
        android:layout_width="match_parent"
        android:layout_height="80dip">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/hot_anchor_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp750_56" />


        <ImageView
            android:id="@+id/iv_fource_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp750_56"
            android:src="@drawable/svg_have_fource"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_fource_state"
            android:layout_toRightOf="@id/hot_anchor_image"
            android:gravity="center_vertical"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_anchor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp750_20"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="我是读书的"
                    android:textColor="@color/black"
                    android:textSize="@dimen/px28" />

                <LinearLayout
                    android:id="@+id/ll_anchor_rank"
                    android:layout_width="@dimen/dp750_120"
                    android:layout_height="@dimen/dp750_40"
                    android:layout_marginLeft="@dimen/dp750_10"
                    android:background="@drawable/blue_kuang"
                    android:gravity="center"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:layout_width="@dimen/dp750_20"
                        android:layout_height="@dimen/dp750_20"
                        android:src="@drawable/hot_host" />

                    <TextView
                        android:id="@+id/tv_anchor_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="三"
                        android:textColor="@color/c28abff"
                        android:textSize="@dimen/px18" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp750_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp750_26"
                        android:layout_height="@dimen/dp750_26"
                        android:layout_marginLeft="@dimen/dp750_34"
                        android:src="@drawable/svg_book" />

                    <TextView
                        android:id="@+id/tv_work_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp750_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="作品：302"
                        android:textColor="@color/c9f9f9f"
                        android:textSize="@dimen/px24"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp750_30"
                        android:layout_height="@dimen/dp750_30"
                        android:layout_marginLeft="@dimen/dp750_20"
                        android:src="@drawable/svg_heart" />

                    <TextView
                        android:id="@+id/tv_fans_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp750_10"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="作品"
                        android:textColor="@color/c9f9f9f"
                        android:textSize="@dimen/px24"></TextView>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_1"
        android:layout_marginLeft="@dimen/dp750_40"
        android:layout_marginRight="@dimen/dp750_40"
        android:background="@color/cececec"></View>
</LinearLayout>
