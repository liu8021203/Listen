<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpx82"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/anchor_work_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/anchor_work_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/anchor_work"
                android:textColor="@color/c15acf0"
                android:textSize="@dimen/px26" />

            <View
                android:id="@+id/anchor_work_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpx4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dpx4"
                android:background="@color/c14acf0"></View>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dpx4"
            android:layout_height="@dimen/dpx56"
            android:layout_gravity="center_vertical"
            android:background="@color/cd5d5d5"></View>

        <RelativeLayout
            android:id="@+id/anchor_follow_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/anchor_follow_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/folower_anchor"
                android:textColor="@color/cb7b7b7"
                android:textSize="@dimen/px26" />

            <View
                android:id="@+id/anchor_follow_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpx4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dpx4"
                android:background="@color/c14acf0"
                android:visibility="gone"></View>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dpx4"
            android:layout_height="@dimen/dpx56"
            android:layout_gravity="center_vertical"
            android:background="@color/cd5d5d5"></View>

        <RelativeLayout
            android:id="@+id/rewark_rank_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/rewark_rank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/reward_rank"
                android:textColor="@color/cb7b7b7"
                android:textSize="@dimen/px26" />

            <View
                android:id="@+id/rewark_rank_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dpx4"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dpx4"
                android:background="@color/c14acf0"
                android:visibility="gone"></View>

        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/anchor_main_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></android.support.v4.view.ViewPager>


</LinearLayout>
