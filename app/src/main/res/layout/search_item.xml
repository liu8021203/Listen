<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/search_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpx96"
        android:background="@color/white">

        <ImageView
            android:id="@+id/search_item_image"
            android:layout_width="@dimen/dpx30"
            android:layout_height="@dimen/dpx30"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dpx54"
            android:background="@mipmap/grey_search_image"/>

        <TextView
            android:id="@+id/search_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dpx44"
            android:layout_toRightOf="@id/search_item_image"
            android:textColor="@color/c666666"
            android:textSize="@dimen/px30"

            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dpx2"
        android:background="@color/cd9d9db"
        android:layout_marginLeft="@dimen/dpx40"
        android:layout_marginRight="@dimen/dpx40"></View>

</LinearLayout>
