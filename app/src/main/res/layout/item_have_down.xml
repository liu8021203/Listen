<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="70dip">


    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"/>


    <ImageView
        android:id="@+id/down_delete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dpx40"
        android:paddingRight="@dimen/dpx58"
        android:src="@mipmap/download_delete_gray"/>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="鬼吹灯全集(丰帆版)第一集"
        android:layout_toLeftOf="@+id/down_delete"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_img"
        android:layout_marginLeft="20dp"
        android:textColor="@color/caaaaaa"
        android:textSize="17sp"/>


</RelativeLayout>
