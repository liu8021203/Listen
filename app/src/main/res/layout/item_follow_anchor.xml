<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dip">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/follower_touxiang"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dpx24"
            android:src="@mipmap/icon_user"
            >
        </de.hdodenhof.circleimageview.CircleImageView>


        <TextView
            android:id="@+id/fans_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是读书的"
            android:textColor="@color/c676767"
            android:layout_toRightOf="@+id/follower_touxiang"
            android:layout_marginLeft="12dip"
            android:layout_alignTop="@+id/follower_touxiang"
            android:textSize="@dimen/px26"/>

        <TextView
            android:id="@+id/fans_last_listener"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最近收听：狼图腾"
            android:textColor="@color/c676767"
            android:layout_toRightOf="@+id/follower_touxiang"
            android:layout_marginLeft="12dip"
            android:layout_alignBottom="@+id/follower_touxiang"
            android:textSize="@dimen/px26"/>

    </RelativeLayout>

</LinearLayout>
