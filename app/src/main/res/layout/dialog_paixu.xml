<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dpx80"
        android:layout_marginRight="@dimen/dpx80"
        android:background="@drawable/sort_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dpx30"
            android:text="@string/check_paixu"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/zheng_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dpx30"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/zheng_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/blue_radio_check"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dpx100"
                android:text="@string/zheng_paixu"
                android:textColor="@color/white"
                android:textSize="@dimen/dpx24"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fan_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/fan_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/white_radio_check"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dpx100"
                android:text="@string/fan_paixu"
                android:textColor="@color/white"
                android:textSize="@dimen/dpx24"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginTop="20dip"
            android:background="@color/white"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:background="@drawable/sort_left_btn"
                android:text="取消"/>


            <View
                android:layout_width="0.1dip"
                android:layout_height="match_parent"
                android:background="@color/white"></View>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/sort_right_btn"
                android:textColor="@color/white"
                android:text="确定"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
