<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >
    
    <LinearLayout
        android:id="@+id/camera_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>
    

    <LinearLayout
        android:id="@+id/camera_title_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/c171717"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/camera_side_change"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="right"
            android:background="@drawable/button_camera_side_change"/>

    </LinearLayout>

    
    <RelativeLayout
        android:id="@+id/camera_control_layout"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:background="@color/c171717">

        <ImageView
            android:id="@+id/camera_flash"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/camera_flashlight_auto" />

        <ImageView
            android:id="@+id/camera_shot"
            android:layout_width="61dp"
            android:layout_height="61dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_camera_shot"/>

        <ImageView
            android:id="@+id/camera_cancle"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_camera_cancle"/>

    </RelativeLayout>

</RelativeLayout>
