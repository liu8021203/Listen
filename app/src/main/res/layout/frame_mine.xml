<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/actionbarColor"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_260"
                android:background="@mipmap/mine_bg"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/person_touxiang"
                    android:layout_width="@dimen/dp750_120"
                    android:layout_height="@dimen/dp750_120"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dip"
                    android:src="@mipmap/mine_head_img">
                </de.hdodenhof.circleimageview.CircleImageView>


                <TextView
                    android:id="@+id/tv_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/person_touxiang"
                    android:layout_marginLeft="18dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@+id/person_touxiang"
                    android:background="@drawable/mine_login"
                    android:paddingBottom="3dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="3dip"
                    android:text="立即登录"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/tv_login_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_login"
                    android:layout_marginLeft="6dip"
                    android:layout_marginTop="6dip"
                    android:layout_toRightOf="@id/person_touxiang"
                    android:text="登录后享受更多精彩"
                    android:textColor="@color/white"
                    android:textSize="11sp"/>

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/person_touxiang"
                    android:layout_marginLeft="18dip"
                    android:layout_marginTop="10dip"
                    android:layout_toRightOf="@+id/person_touxiang"
                    android:text="立即登录"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:textSize="12sp"/>


                <TextView
                    android:id="@+id/tv_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_name"
                    android:layout_alignLeft="@+id/tv_name"
                    android:layout_marginTop="10dip"
                    android:text="-----"
                    android:textColor="@color/white"
                    android:textSize="12sp"/>

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_money"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:layout_marginTop="@dimen/dp750_30"
                android:background="@drawable/mine_item_background"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/mine_money"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="钱包"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl_money_details"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:layout_marginTop="@dimen/dp750_30"
                android:background="@drawable/mine_item_background"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/money_details"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="消费明细"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_1"
                android:background="#ececec"></View>


            <RelativeLayout
                android:id="@+id/rl_buy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:background="@drawable/mine_item_background"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/buy_book"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="我的购买"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>


            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_1"
                android:background="#ececec"></View>

            <RelativeLayout
                android:id="@+id/rl_scard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:background="@drawable/mine_item_background"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/mine_scard"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="听书卡"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_1"
                android:background="#ececec"></View>

            <RelativeLayout
                android:id="@+id/rl_collect"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:background="@drawable/mine_item_background"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/mine_collect"
                    android:drawablePadding="10dip"
                    android:text="收藏"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_1"
                android:background="#ececec"></View>

            <RelativeLayout
                android:id="@+id/rl_focus"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:background="@drawable/mine_item_background"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/mine_focus"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="关注"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_feed"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:layout_marginTop="@dimen/dp750_30"
                android:background="@drawable/mine_item_background">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/mine_feed"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="反馈"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_1"
                android:background="#ececec"></View>

            <RelativeLayout
                android:id="@+id/rl_setting"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:background="@drawable/mine_item_background">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/mine_setting"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="设置"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>


            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_1"
                android:background="#ececec"></View>

            <RelativeLayout
                android:id="@+id/rl_about"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp750_80"
                android:background="@drawable/mine_item_background"

                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp750_21"
                    android:drawableLeft="@mipmap/mine_about"
                    android:drawablePadding="10dip"
                    android:gravity="center_vertical"
                    android:text="关于我们"
                    android:textColor="#333333"
                    android:textSize="@dimen/px28"/>
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
