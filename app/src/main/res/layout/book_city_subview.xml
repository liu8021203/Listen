<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cececec"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dpx84"
        android:background="@color/white"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/hot_rank_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hot_rank_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/hot_listener_rank"
                android:textColor="@color/c14acf0"
                android:textSize="@dimen/px30" />

            <View
                android:layout_width="@dimen/dpx1"
                android:layout_height="@dimen/dpx56"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/cddccdd"></View>

            <ImageView
                android:id="@+id/hot_rank_line"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dpx4"
                android:layout_alignParentBottom="true"

                android:background="@color/c14acf0"/>

        </RelativeLayout>

        <View
            android:layout_width="@dimen/dpx1"
            android:layout_height="@dimen/dpx56"
            android:layout_gravity="center_vertical"
            android:background="@color/ccaddcb"></View>

        <RelativeLayout
            android:id="@+id/hot_anchor_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/hot_anchor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/hot_anchor"
                android:textColor="@color/cab99a0"
                android:textSize="@dimen/px30" />

            <View
                android:layout_width="@dimen/dpx1"
                android:layout_height="@dimen/dpx56"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/cddccdd"></View>

            <View
                android:layout_width="@dimen/dpx1"
                android:layout_height="@dimen/dpx56"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/cddccdd"></View>

            <ImageView
                android:id="@+id/hot_anchor_line"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dpx4"
                android:layout_alignParentBottom="true"
                android:visibility="gone"
                android:background="@color/c14acf0"></ImageView>
        </RelativeLayout>

        <View
            android:layout_width="@dimen/dpx1"
            android:layout_height="@dimen/dpx56"
            android:layout_gravity="center_vertical"
            android:background="@color/ccaddcb"></View>

        <RelativeLayout
            android:id="@+id/fin_reconmmend_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/fin_reconmmend_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/fine_reconmmend"
                android:textColor="@color/cab99a0"
                android:textSize="@dimen/px30" />

            <View
                android:layout_width="@dimen/dpx1"
                android:layout_height="@dimen/dpx56"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@color/cddccdd"></View>

            <ImageView
                android:id="@+id/fin_reconmmend_line"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/dpx4"
                android:layout_alignParentBottom="true"

                android:background="@color/c14acf0"
                android:visibility="gone"></ImageView>
        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/book_city_viewpager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >
    </android.support.v4.view.ViewPager>

</LinearLayout>
