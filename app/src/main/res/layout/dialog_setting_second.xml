<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp750_72"
        android:layout_marginRight="@dimen/dp750_72"
        android:background="@drawable/dialog_layout_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="设置跳过片头"
            android:textColor="@color/black"
            android:textSize="14sp"></TextView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="快进"
                android:textColor="@color/black"
                android:textSize="13sp"></TextView>

            <EditText
                android:id="@+id/et_second"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/setting_second_bg"
                android:gravity="center"
                android:inputType="number"
                android:textSize="11sp"></EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="秒"
                android:textColor="@color/black"
                android:textSize="13sp"></TextView>
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_marginTop="20dp"
            android:background="#dcdcdc"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp750_90"
            android:orientation="horizontal"
            android:padding="1dip">

            <Button
                android:id="@+id/btn_cancle"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black" />

            <View
                android:layout_width="0.1dip"
                android:layout_height="match_parent"
                android:background="#dcdcdc"></View>


            <Button
                android:id="@+id/btn_default"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="恢复默认"
                android:textColor="@color/black" />

            <View
                android:layout_width="0.1dip"
                android:layout_height="match_parent"
                android:background="#dcdcdc"></View>


            <Button
                android:id="@+id/btn_ok"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/black" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
