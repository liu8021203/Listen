<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_116">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp750_40"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="充值成功"
                android:textColor="@color/c666666"
                android:textSize="@dimen/px28"

                />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp750_20"
                android:singleLine="true"
                android:text="2016-07-12  18:56:32"
                android:textColor="@color/c9f9f9f"
                android:textSize="@dimen/px24"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp750_40"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_get_dou_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20听豆"
                android:textColor="@color/c666666"
                android:textSize="@dimen/px28"

                />

            <TextView
                android:id="@+id/tv_pay_details"
                android:layout_width="@dimen/dp750_100"
                android:layout_height="@dimen/dp750_44"
                android:layout_marginTop="@dimen/dp750_14"
                android:background="@drawable/dou_details_background"
                android:gravity="center"
                android:text="详 情"
                android:textColor="@color/cfdac3e"
                android:textSize="@dimen/px20"
                android:visibility="gone" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp750_1"
        android:background="@color/cebebeb"></View>
</LinearLayout>